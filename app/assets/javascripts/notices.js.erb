function notices() {
  if($('.alert').length > 0) {
    $('body').addClass('margin-top-56')
    if($('#share').length == 0) {
      setTimeout(function(){
        $('.alert').addClass('is-hidden')
        setTimeout(function() {
          $('.alert').remove()
        }, 1000)
        $('body').removeClass('margin-top-56')
      }, 10000)
    } else if($('.alert').length > 1){
      setTimeout(function() {
        $('.alert').last().addClass('is-hidden').remove()
      }, 5000)
    }
  }
  $('#share .close').on('click', function() {
    $('.margin-top-56').removeClass('margin-top-56')
  })
}

