<h1><%= t('.booking_request') %></h1>
<h4><strong><%= @booking.offer.nature %></strong></h4>

<p><%= link_to @booking.user.first_name, user_path(@booking.user) %> <%= t('.would_like') %> <%= @booking.offer.nature %>, <%= t('.from') %> <strong><%= @booking.start_date.strftime("%-d %b %Y") %></strong> <%= t('.to') %> <strong><%= @booking.end_date.strftime("%-d %b %Y") %></strong></p>

<p><%= t('.on_the_basis') %> <%= @booking.offer.one_price(t('.hourly_price'), t('.weekly_price'), t('.daily_price')) %> <%= t('.and_service_fees') %> <strong><%= (@booking.booking_price * 0.96).floor %><%= t('.currency') %></strong></p>