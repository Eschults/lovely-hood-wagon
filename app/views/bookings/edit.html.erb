<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <div class="panel panel-default margin-20-30 padding-none border-none transparent-bg">
        <div class="panel-body padding-none border-none transparent-bg">
          <!-- si l'offer est un service, la photo est celle du user -->
          <% if @booking.offer.type_of_offer =="service" %>
            <% if @booking.offer.user.picture_file_name %>
              <%= image_tag(@booking.offer.user.picture.url(:medium), { class: "img-thumbnail" }) %>
            <% else %>
              <%= image_tag "#{@booking.offer.nature}.png", class: "img-thumbnail white-bg" %>
            <% end %>
          <!-- sinon c'est la photo de l'annonce, obligatoire à la création -->
          <% else %>
            <% if @booking.offer.picture_file_name %>
              <%= image_tag(@booking.offer.picture.url(:medium), { class: "img-thumbnail" }) %>
            <% else %>
              <%= image_tag("no-image.png", { class: "img-thumbnail transparent-bg" }) %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-9">
      <div class="booking">

        <% if @booking.offer.type_of_offer == "rent" %>
          <%= render "rent" %>
        <% elsif @booking.offer.type_of_offer == "service" %>
          <%= render "service" %>
        <% end %>
      </div>
      <div class="booking-answer">
        <div class="col-sm-1 padding-left-10">
          <%= form_for([@booking.offer, @booking]) do |f| %>
            <%= f.text_field :accepted, class: "hidden", value: true %>
            <%= f.submit 'Accepter', class: "btn btn-success" %>
          <% end %>
          </div>
        <div class="col-sm-1 padding-left-30">
          <%= form_for([@booking.offer, @booking]) do |f| %>
            <%= f.text_field :accepted, class: "hidden", value: false %>
            <%= f.submit 'Refuser', class: "btn btn-danger" %>
          <% end %>
        </div>
        <div class="col-sm-1 padding-left-43">
          <% if current_user.conversation_with(@booking.user) %>
            <%= link_to conversation_path(current_user.conversation_with(@booking.user), anchor: "message-input"), class: "btn btn-default" do %>
              Discuter
            <% end %>
          <% else %>
            <%= link_to new_offer_conversation_path(@booking.offer, @booking.user), class: "btn btn-default" do %>
              Discuter
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
