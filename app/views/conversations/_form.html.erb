<% if current_user.conversation_with(@offer.user) %>
  <%= form_for([current_user.conversation_with(@offer.user), @message], method: :put, url: reply_server_conversation_path(current_user.conversation_with(@offer.user))) do |f| %>
    <div class="form-group">
      <%= f.label :content, "Message", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :content, class: "form-control" %>
      </div>
    </div>

    <div class="form-group margin-btm-none">
      <div class="col-sm-2">
      </div>
      <div class="col-sm-10">
        <%= f.submit "Envoyer", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% else %>
  <%= form_for([@offer, @conversation, @message], method: :post, url:   offer_conversations_path(@offer)) do |f| %>
    <div class="form-group">
      <%= f.label :content, "Message", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :content, class: "form-control" %>
      </div>
    </div>

    <div class="form-group margin-btm-none">
      <div class="col-sm-2">
      </div>
      <div class="col-sm-10">
        <%= f.submit "Envoyer", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>
