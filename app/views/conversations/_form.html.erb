<%= form_for(:conversation, url: :conversations)) do |f| %>
  <div class="form-group">
    <%= f.label :recipients, "Destinataire", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :recipients, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :subject, "Objet", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :subject, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body, "Message", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>

  <div class="form-group margin-btm-none">
    <div class="col-xs-12">
      <div class="col-sm-1">
      </div>
      <div class="col-sm-11">
        <%= f.submit "Envoyer", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>