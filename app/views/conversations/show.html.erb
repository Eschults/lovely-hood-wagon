<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="panel panel-default margin-top-15 padding-none">
        <div class="panel-heading">
          <h3>
            Conversation avec
            <% if @conversation.user1 == current_user %>
              <%= @conversation.user2.first_name %>
            <% else %>
              <%= @conversation.user1.first_name %>
            <% end %>
          </h3>
        </div>
        <div class="panel-body padding-none">
          <div id="messages">
            <% @conversation.messages.sort_by(&:updated_at).each do |message| %>
              <%= render "message", message: message %>
            <% end %>
          </div>
          <div class="col-xs-12 reply padding-none">
            <%= form_for([@conversation, @message], method: :put, remote: true, url: reply_conversation_path(@conversation)) do |f| %>
              <div class="form-group">
                <%= f.text_area :content, value:"", placeholder: "Votre rÃ©ponse...", class: "form-control", id: "message-input" %>
              </div>
              <div class="form-group margin-btm-none">
                <%= f.submit "Envoyer", class: "btn btn-primary" %>
                <%= link_to "Retour aux messages", conversations_path, class: "btn btn-success margin-left-10" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>