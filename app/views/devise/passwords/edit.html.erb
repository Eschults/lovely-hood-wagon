<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <div class="white-bg frame">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <%= f.password_field :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.password_field :password, label: "New password", required: true, autofocus: true %>
            <%= f.password_field :password_confirmation, label: "Confirm your new password", required: true %>
          </div>

          <div class="form-actions">
            <%= f.submit "Changer de mot de passe" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

