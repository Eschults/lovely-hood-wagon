<%= content_for(:title) do %>
  Connexion - LH
<% end %>
<%= content_for(:description) do %>
  Connectez vous sur Lovely Hood et recherchez les biens et services qui vous intéressent près de chez vous
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default margin-20">
        <div class="panel-body padding-20">
          <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%- if devise_mapping.omniauthable? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
                <%= link_to "Connexion avec #{provider.to_s}", omniauth_authorize_path(resource_name, provider), class: "btn btn-facebook btn-wide" %><br />
              <% end -%>
            <% end -%>
            <br>
            <div class="form-inputs">
              <%= f.email_field :email, label: "Adresse email", required: false, autofocus: true %>
              <%= f.password_field :password, label: "Mot de passe", required: false %>
              <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.submit "Connexion" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= content_for :js do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $('.alert').delay(1000).fadeOut(2000)
    })
  <% end %>
<% end %>

