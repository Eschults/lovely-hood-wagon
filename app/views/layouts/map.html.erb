<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <%= stylesheet_link_tag "application" %>
  <%= stylesheet_link_tag "map" %>
  <%= yield :stylesheets %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>
</head>
<body>
  <div class="bg-color" id="wrapper">
    <%= render "layouts/navbar" %>

    <div class="notices">
      <%= render "layouts/notices" %>
    </div>

    <%= yield %>
  </div>

  <%= javascript_include_tag "https://maps.google.com/maps/api/js?sensor=false" %>
  <%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>
  <%= javascript_include_tag 'application' %>
  <%= yield :js %>
  <%= javascript_tag do %>
    $(document).ready(function(e) {
      colorMessagesBadgeOnHover();
    });
  <% end %>
</body>
</html>
