  <%= stylesheet_link_tag "application" %>
  <%= stylesheet_link_tag "map" %>
  <%= yield :stylesheets %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag %>
</head>
<body>
  <div class="bg-color" id="wrapper">
    <%= render "layouts/navbar_map" %>

    <div class="notices">
      <%= render "layouts/notices" %>
    </div>

    <%= yield %>
  </div>

  <%= javascript_include_tag "https://maps.google.com/maps/api/js?sensor=false" %>
  <%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>
  <%= javascript_include_tag 'application' %>
  <%= yield :js %>
  <%= javascript_tag do %>
    $(document).ready(function(e) {
      colorMessagesBadgeOnHover();
    });
  <% end %>
</body>
</html>
