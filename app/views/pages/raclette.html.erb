<%= content_for(:title) do %>
  <%= t('.title') %>
<% end %>
<%= content_for(:description) do %>
  <%= t('.description') %>
<% end %>
<div id="raclette-bg">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="lead-raclette" id="">
          <h1 class="margin-btm-none"><%= t('.value_prop') %></h1>
          <div class="text-center">
            <%= link_to t('.sign_up'), "#sign-up-bg", class: "btn btn-default montserrat", id: "sign-up-btn" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="sign-up-bg">
  <div class='raclette-wrapper-end'>
    <div class='container'>
      <div class='row'>
        <div class="col-xs-12">
          <% unless user_signed_in? %>
            <div class="pull-right" id="sign-up">
              <div class="panel panel-default max-width-300">
                <div class="panel-body">
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <div class="">
                      <%- if devise_mapping.omniauthable? %>
                        <%- resource_class.omniauth_providers.each do |provider| %>
                          <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-facebook btn-wide margin-btm-15" do %>
                            <%= t('.fb_connect') %>
                          <% end %>
                        <% end -%>
                      <% end -%>
                      <div class="form-group">
                        <%= f.email_field :email, required: true, class: "form-control", placeholder: "Email" %>
                      </div>
                      <div class="form-group">
                        <%= f.password_field :password, required: true, autocomplete: "off", class: "form-control", placeholder: t('.password') %>
                      </div>
                      <div class="form-group">
                        <%= f.password_field :password_confirmation, required: true, autocomplete: "off",placeholder: t('.confirm'), class: "form-control" %>
                      </div>
                      <%= f.submit t('.create_account'), class: "btn btn-primary btn-wide"%>
                    </div>
                  <% end %>
                  <p class="padding-top-none padding-btm-none mini text-left">
                    <%= t('.warning') %> <%= link_to t('.terms').downcase, terms_path %>.
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= content_for :js do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $('#sign-up-btn').on('click', function(){
        var id = $(this).attr("href");
        $('body').animate({scrollTop: $(id).offset().top}, "slow")
        return false
      })
    })
  <% end %>
<% end %>