<% @items.each do |item| %>
  <% if item.class == Post %>
    <%= render "post", post: item %>
  <% else %>
    <% unless item.trackable_type == "Offer" && item.trackable.published == false %>
      <%= render "posts/activity", activity: item if (item.owner && item.trackable) %>
    <% end %>
  <% end %>
<% end %>