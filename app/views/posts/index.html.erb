<%= content_for(:title) do %>
  Wall of ze Hood - LH
<% end %>
<%= content_for(:description) do %>
  Communiquez facilement avec vos voisins grâce à la chatroom de Lovely Hood
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2">
      <div class="panel panel-default white-bg margin-top-15 padding-none">
        <%= form_for @post, method: :post, url: posts_path, remote: true do |f| %>
          <div class="panel-body">
            <div class="row">
              <div class="col-xs-12">
                <div class="col-xs-2 img-small-square padding-none margin-left-none">
                  <% if current_user.picture_file_name %>
                    <%= image_tag(current_user.picture.url(:medium), { class: "img" }) %>
                  <% else %>
                    <%= image_tag "user_pic-60.png", class: "img logo-small bg-color" %>
                  <% end %>
                </div>
                <div class="col-xs-10 padding-left-10 js-other-target">
                  <div class="form-group margin-btm-none">
                    <%= f.text_area :content, placeholder: "Exprimez-vous ici", style: "resize: none", class: "form-control height-42 padding-top-none padding-left-none border-none" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="panel-footer text-right" id="panel-footer-posts">
            <%= f.submit "Poster", class: "btn btn-post" %>
          </div>
        <% end %>
      </div>
      <div id="posts-stream">
        <% @posts.sort_by(&:created_at).reverse.each do |post| %>
          <%= render "post", post: post %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= content_for :js do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      comment();
      $('#wall-nav-link').addClass('hover');
      $('.link-popover').popover({
        html: true,
        trigger: "hover",
        placement: "top"
      })
      if($(window).width() < 530) {
        $('.js-target').removeClass('width-92')
      } else {
        $('.js-target').addClass('width-92')
      }
      $(window).on('resize', function() {
        if($(window).width() < 530) {
          $('.js-target').removeClass('width-92')
        } else {
          $('.js-target').addClass('width-92')
        }
      })
      if($(window).width() < 376) {
        $('.js-other-target').removeClass('col-xs-10').addClass('col-xs-9')
      } else {
        $('.js-other-target').addClass('col-xs-10').removeClass('col-xs-9')
      }
      $(window).on('resize', function() {
        if($(window).width() < 376) {
          $('.js-other-target').removeClass('col-xs-10').addClass('col-xs-9')
        } else {
          $('.js-other-target').addClass('col-xs-10').removeClass('col-xs-9')
        }
      })
    })
  <% end %>
<% end %>