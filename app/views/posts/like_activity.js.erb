<% if @activity.get_likes.size > 1 %>
  $('#like_activity_link_' + <%= @activity.id %>).html("<%= t('.unlike') %>")
  $('#like_activity_link_' + <%= @activity.id %>).attr("href", "<%= unlike_activity_post_path(@activity) %>")
  $('#like_activity_link_' + <%= @activity.id %>).attr("id", "unlike_activity_link_" + <%= @activity.id %>)
  $('#likes_activity_' + <%= @activity.id %>).slideUp(function() {
    var like_infos = $("<%= j render 'likes', post: @activity %>").hide();
    $('#comments-stream-activity-' + <%= @activity.id %>).prepend(like_infos);
    like_infos.slideDown();
  })
<% else %>
  $('#like_activity_link_' + <%= @activity.id %>).html("<%= t('.unlike') %>")
  $('#like_activity_link_' + <%= @activity.id %>).attr("href", "<%= unlike_activity_post_path(@activity) %>")
  $('#like_activity_link_' + <%= @activity.id %>).attr("id", "unlike_activity_link_" + <%= @activity.id %>)
  var like_infos = $("<%= j render 'likes', post: @activity %>").hide();
  $('#comments-stream-activity-' + <%= @activity.id %>).prepend(like_infos);
  like_infos.slideDown();
<% end %>
