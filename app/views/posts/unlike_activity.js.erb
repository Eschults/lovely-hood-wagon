<% if @activity.get_likes.size == 0 %>
  $('#unlike_activity_link_' + <%= @activity.id %>).html("J'aime")
  $('#unlike_activity_link_' + <%= @activity.id %>).attr("href", "<%= like_activity_post_path(@activity) %>")
  $('#unlike_activity_link_' + <%= @activity.id %>).attr("id", "like_activity_link_" + <%= @activity.id %>)
  $('#likes_activity_' + <%= @activity.id %>).slideUp()
<% else %>
  $('#unlike_activity_link_' + <%= @activity.id %>).html("J'aime")
  $('#unlike_activity_link_' + <%= @activity.id %>).attr("href", "<%= like_activity_post_path(activity) %>")
  $('#unlike_activity_link_' + <%= @activity.id %>).attr("id", "like_activity_link_" + <%= @activity.id %>)
  $('#likes_activity_' + <%= @activity.id %>).slideUp(function() {
    var like_infos = $("<%= j render 'likes', post: @activity %>").hide();
    $('#comments-stream-activity-' + <%= @activity.id %>).prepend(like_infos);
    like_infos.slideDown();
  })
<% end %>
