<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="header-box">
        <div class="frame-header">
          <h2 class="margin-none">Votre revue de : <%= @booking.offer.nature %></h2>
        </div>
      </div>
      <div class="body-box">
        <div class="form-horizontal white-bg frame-body">
          <%= form_for([@booking, @review], url: edit_booking_review_path(@booking, @review)) do |f| %>

            <div class="form-group">
              <%= f.label :communication_rating, "Communication :", class: "col-sm-3 control-label" %>
              <div class="col-sm-9">
                <%= f.hidden_field :communication_rating, id: "communication_rating" %>
                <ul class="communication_rating list-unstyle list-inline">
                  <% (1..5).each do |i| %>
                    <li class="rating-star" data-stars="<%= i %>" data-nature="communication" id=<%= "communication_#{i}" %>><i class="fa fa-star"></i></li>
                  <% end %>
                </ul>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :punctuality_rating, "Ponctualité :", class: "col-sm-3 control-label" %>
              <div class="col-sm-9">
                <%= f.hidden_field :punctuality_rating, id: "pubctuality_rating" %>
                <ul class="punctuality_rating list-unstyle list-inline">
                  <% (1..5).each do |i| %>
                    <li class="rating-star" data-stars="<%= i %>" data-nature="punctuality" id="<%= "punctuality_#{i}" %>"><i class="fa fa-star"></i></li>
                  <% end %>
                </ul>
              </div>
            </div>

            <% if @review.review_type == "cto" %>
              <!-- quality/ price -->
            <% else %>
              <% if @booking.offer.type_of_offer == "rent" %>
                <!-- respect matériel -->
              <% end %>
            <% end %>

            <div class="form-group margin-btm-none">
              <div class="col-sm-3">
              </div>
              <div class="col-sm-9">
                <%= f.submit "Terminer", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for(:js) do %>
  <% javascript_tag do %>
    $(document).ready(function() {
      $('.rating-star').click(function(e) {
        highlightStars($(this));
      });
    });
  <% end %>
<% end %>
