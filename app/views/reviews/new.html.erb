<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="panel panel-default margin-top-15 padding-none">
        <div class="panel-heading">
          <h4>
            Commentaire : <%= @booking.offer.nature %>
            <% if current_user == @booking.user %>
               (<%= @booking.offer.user.first_name %>)
            <% else %>
               (<%= @booking.user.first_name %>)
            <% end %>
          </h4>
        </div>
        <div class="panel-body form-horizontal">
          <%= form_for([@booking, @review], url: booking_review_path(@booking, @review)) do |f| %>
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.text_area :comment, placeholder: "Décrivez votre expérience, les points positifs, les points négatifs...", rows: 5, class: "form-control" %>
              </div>
            </div>

            <div class="form-group margin-btm-none">
              <div class="col-sm-12">
                <%= f.submit "Suivant", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>