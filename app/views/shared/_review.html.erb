<div class="review">
  <div class="row">
    <div class="col-xs-2 text-center">
      <% if review.review_type == "cto" %>
        <%= link_to user_path(booking.user) do %>
          <div class="img-review-box">
            <div class="img-medium">
              <% if booking.user.picture_file_name %>
                <%= image_tag(booking.user.picture.url(:medium), { class: "img" }) %>
              <% else %>
                <%= image_tag "user_pic-60.png" %>
              <% end %>
            </div>
          </div>
        <% end %>
        <div class="user-name">
          <%= link_to booking.user.first_name, user_path(booking.user), class: "link-unstyled" %>
        </div>
      <% elsif review.review_type == "otc" %>
        <%= link_to user_path(booking.offer.user) do %>
          <div class="img-review-box">
            <div class="img-medium">
              <% if booking.offer.user.picture_file_name %>
                <%= image_tag(booking.offer.user.picture.url(:medium), { class: "img" }) %>
              <% else %>
                <%= image_tag "user_pic-60.png"%>
              <% end %>
            </div>
          </div>
        <% end %>
        <div class="user-name">
          <%= link_to booking.offer.user.first_name, user_path(booking.offer.user), class: "link-unstyled" %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-10">
      <div class="review-content">
        <div class="row">
          <div class="col-xs-12 comment">
            <%= simple_format review.comment %>
          </div>
        </div>
        <div class="review-footer">
          <div class="review-date">
            <%= review.created_at.strftime("%b %Y") %>
          </div>
          <div class="offer-link">
            <%= link_to offer_path(booking.offer) do %>
              <%= booking.offer.nature %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for(:js) do %>
  <% javascript_tag do %>
    $(document).ready(function() {
      var height;
      var width;
      adjustImgMedium();
      adjustImgSmall();
    });
  <% end %>
<% end %>
