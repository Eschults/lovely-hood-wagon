<% if current_user.admin %>
  <div class="col-xs-12">
    <h2>Générer le paiement d'un booking</h2>
    <p>
      Renseigne l'id du booking, le prix en cents (= @booking.booking_price * commission_client * 100) et valide !
    </p>
  </div>

  <div class="col-md-4">
    <%= form_tag stripe_payments_path, id: "stripe_payment_form" do %>
      <span class="payment-errors"></span>
      <div class="form-group">
        <%= label_tag :booking_id, "ID du booking" %>
        <%= text_field_tag :booking_id, nil, name: "booking_id", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :amount_cents, "Prix en cents" %>
        <%= number_field_tag :amount_cents, nil, name: "amount_cents", class: "form-control" %>
      </div>
      <%= submit_tag "Valider", class: "btn btn-primary" %>
    <% end %>
  </div>


  <% content_for :js do %>
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
    <%= javascript_tag do %>
    <% end %>
  <% end %>
<% end %>